unsigned short crc16_ccitt(unsigned char data,unsigned short crc1)
{
unsigned short ccitt16 = 0x8408;//0x8408 为 0x1021 的逆序值,而 0x1021 为生成多项式 0x11021
int i;
crc1 ^= data; /*新的数据与原来的余数相加（加法就是异或操作） */
for(i=0;i<8;i++)
{
if(crc1 & 0x0001) /*最低位为 1， 减去除数 */
{
crc1 >>= 1;
crc1 ^= ccitt16;
} 
else /*最低位为 0， 不需要减去除数 */
{
crc1 >>= 1; /*直接移位*/
}
}
 return crc1;
} 

