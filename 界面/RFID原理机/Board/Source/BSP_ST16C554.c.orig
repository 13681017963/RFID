/*
***************************************************************************
*	函 数 名: BSP_ST16C554_CS1A
*	功能说明: 板级 ST16C554 CS1A 功能函数
*	形    参: 无
*	返 回 值: 无
***************************************************************************
*/
void BSP_ST16C554_CS1A_ISR(void)
{
		uint8_t ret;
    if(GPIO_ReadInputDataBit(GPIOF, GPIO_Pin_6))
    {
        EXTI_ClearITPendingBit(EXTI_Line6);
        ret =  BSP_ST16C554_CS1A_Read();
        printf("???????  %x ??????\r\n", ret);
        //USART_SendData(USART1,BSP_ST16C554_CS1A_Read());
        switch(recSta)
        {
        case CMD:
						if(ret != cmd) break;
						rxflag = 0;
            len = 0;
            Flag1 = 0;
            Flag2 = 0;
            drbuf[len++] = ret;
            recSta = FLAG;
            break;
        case FLAG:
            drbuf[len++] = ret;
            if(ret == 0x00)
                recSta = DATA;
            else
                recSta = CMD;
            break;
        case DATA:
//					drbuf[len++] = ret;
//				if(len == 16) recSta = FCS;
            drbuf[len++] = ret;
            if(len == 11)
            {
                if(drbuf[2] & 0x01)
                    recSta = DSFID;
                else
                {
                    if(drbuf[2] & 0x02)
                        recSta = AFI;
                    else
                    {
                        if(drbuf[2] & 0x04)
                            recSta = VICC;
                        else
                        {
                            if(drbuf[2] & 0x08)
                                recSta = ICR;
                            else
                                recSta = FCS;
                        }
                    }
                }
            }
            break;
        case DSFID:
            drbuf[len++] = ret;
            if(drbuf[2] & 0x02)
                recSta = AFI;
            else
            {
                if(drbuf[2] & 0x04)
                    recSta = VICC;
                else
                {
                    if(drbuf[2] & 0x08)
                        recSta = ICR;
                    else
                        recSta = FCS;
                }
            }
            break;
        case AFI:
            drbuf[len++] = ret;
            if(drbuf[2] & 0x04)
                recSta = VICC;
            else
            {
                if(drbuf[2] & 0x08)
                    recSta = ICR;
                else
                    recSta = FCS;
            }
            break;
        case VICC:
            drbuf[len++] = ret;
            Flag1++;
            if(Flag1 == 2)
            {
                if(drbuf[2] & 0x08)
                    recSta = ICR;
                else
                    recSta = FCS;
            }
            break;
        case ICR:
            drbuf[len++] = ret;
            recSta = FCS;
            break;
        case FCS:
            drbuf[len++] = ret;
            Flag2++;
            if(Flag2 == 1)
                recSta = FCS;
            else
            {
                recSta = CMD;
                rxflag = 1;
            }
            break;
        }
    }
}
